{
  "name": "esquisse",
  "productName": "Esquisse",
  "version": "1.0.0",
  "description": "A minimalist, local-first journaling desktop application",
  "main": ".vite/build/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "clean": "rm -rf .vite out dist node_modules/.vite",
    "rebuild": "npm run clean && npm install",
    "lint": "eslint --ext .ts,.tsx .",
    "lint:fix": "eslint --ext .ts,.tsx . --fix",
    "lint:strict": "eslint --ext .ts,.tsx . --max-warnings 0",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:css:fix": "stylelint \"src/**/*.css\" --fix",
    "lint:md": "remark . --ext .md --frail",
    "lint:md:fix": "remark . --ext .md --frail --output",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\"",
    "type-check": "tsc --noEmit",
    "config:generate-ts-paths": "npx tsx scripts/generate-ts-paths.js",
    "validate:translations": "node scripts/validate-translations.js",
    "validate:config": "npm run config:generate-ts-paths",
    "validate": "npm run validate:config && npm run format && npm run lint:fix && npm run lint:css:fix && npm run lint:md && npm run lint:strict && npm run type-check && npm run validate:translations",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "npm run pretest && vitest run --passWithNoTests",
    "test:coverage": "npm run pretest && vitest run --coverage",
    "test:e2e": "playwright test",
    "migrate:create": "node scripts/migration-cli.js create",
    "migrate:status": "node scripts/migration-cli.js status",
    "migrate:snapshot": "node scripts/migration-cli.js snapshot",
    "db:reset": "npm run pretest && node scripts/db-reset-seed.js reset",
    "db:seed": "npm run pretest && node scripts/db-reset-seed.js seed",
    "db:seed:large": "npm run pretest && node scripts/db-reset-seed.js seed --large",
    "db:reset-seed": "npm run pretest && node scripts/db-reset-seed.js reset-seed",
    "db:reset-seed:large": "npm run pretest && node scripts/db-reset-seed.js reset-seed --large",
    "prepare": "husky",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "npm run rebuild:native"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --max-warnings 0",
      "prettier --write",
      "node scripts/run-type-check.js"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "src/renderer/locales/**/*.json": [
      "prettier --write",
      "node scripts/validate-translations.js"
    ],
    "*.json": [
      "prettier --write"
    ],
    "*.md": [
      "remark --no-stdout --frail",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": {
    "name": "David Lonjon",
    "email": "david.lonjon@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron-forge/plugin-vite": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@electron/rebuild": "^4.0.1",
    "@faker-js/faker": "^10.1.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "daisyui": "^5.5.2",
    "electron": "^39.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "remark-cli": "^12.0.1",
    "remark-gfm": "^4.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^4.1.16",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.9.3",
    "vite": "^5.4.21",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "@floating-ui/react-dom": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.16",
    "@tanstack/react-router": "^1.135.0",
    "@tanstack/react-router-devtools": "^1.135.0",
    "@tiptap/extension-image": "^3.10.2",
    "@tiptap/extension-link": "^3.10.2",
    "@tiptap/extension-placeholder": "^3.10.2",
    "@tiptap/extension-typography": "^3.10.2",
    "@tiptap/react": "^3.10.2",
    "@tiptap/starter-kit": "^3.10.2",
    "better-sqlite3": "github:neoxpert/better-sqlite3#896573e3f5c65b88c6c5e01cd040c353e4bfb80c",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "electron-squirrel-startup": "^1.0.1",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "immer": "^10.2.0",
    "lucide-react": "^0.552.0",
    "react": "^19.2.0",
    "react-day-picker": "^9.11.2",
    "react-dom": "^19.2.0",
    "react-hotkeys-hook": "^5.2.1",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^7.9.5",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12",
    "zustand": "^5.0.8"
  }
}
